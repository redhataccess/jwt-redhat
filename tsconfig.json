{
  "version": "2.1.4",
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "lib": ["dom", "ES5", "ES2015", "ES6", "ES7", "ES2017.object", "ES2018", "ES2019", "ES2020", "ES2021"],
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "allowJs": true,
    "noUnusedLocals": true,
    // The outDir is required as without it, it will give a "Cannot write file ... because it would overwrite input file" error
    "outDir": "dist",
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
